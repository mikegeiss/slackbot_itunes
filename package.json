{
  "name": "slackbot-itunes",
  "version": "1.0.0",
  "description": "",
  "main": "build/app.js",
  "scripts": {
    "clean": "rm -rf build/",
    "test": "env-cmd .env mocha --reporter mochawesome --growl build/scripts/**/*.spec.js ",
    "compile": "tsc",
    "compile-and-test": "npm run compile && npm run test",
    "copy": "npm run copyImages && npm run copyHtml",
    "copyHtml": "cd src; copyfiles **/*.html ../build",
    "copyImages": "cd src; copyfiles  **/*.png ../build",
    "runPouchDb": "pouchdb-server --port 4546 --dir pouchdbcontent",
    "runSlackBot": "node build/scripts/app.js",
    "electron": "electron .",
    "compileAndRun": "npm run compile && npm run runSlackBot",
    "01-build": "npm run compile && npm run copy",
    "02a-build-and-run-electron": "npm run 01-build && npm run electron",
    "02b-build-and-run-commandline": "npm run 01-build && npm run runSlackBot",
    "03-run-pouch-and-commandline": "npm-run-all --parallel 02b-build-and-run-commandline runPouchDb",
    "04-pack": "webpack"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "electron": "1.6.2",
    "env-cmd": "5.1.0",
    "lowdb": "0.16.2",
    "node-couchdb": "1.1.1",
    "pouchdb-find": "^6.2.0",
    "pouchdb-server": "2.3.6",
    "slackbots": "1.0.2",
    "sqlite3": "3.1.8"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "7.0.12",
    "@types/sinon": "^2.2.1",
    "chai": "^3.5.0",
    "copyfiles": "1.2.0",
    "mocha": "^3.3.0",
    "mochawesome": "^2.1.0",
    "npm-run-all": "4.0.2",
    "pouchdb-node": "6.1.2",
    "request": "2.81.0",
    "sinon": "^2.2.0",
    "typescript": "2.2.2",
    "webpack": "2.4.1",
    "when": "3.7.8"
  }
}
